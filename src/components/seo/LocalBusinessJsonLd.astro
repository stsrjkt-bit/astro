---
import { SITE } from 'astrowind:config';

const site = Astro.site?.toString().replace(/\/$/, '') ?? '';
const instagramUrl = SITE.social?.instagram;

const data = {
  '@context': 'https://schema.org',
  '@type': ['LocalBusiness', 'EducationalOrganization'],
  name: 'さとう数理塾',
  url: site,
  sameAs: instagramUrl ? [instagramUrl] : undefined,
  image: site ? [`${site}/images/sato-math-about.jpg`] : undefined,
  description:
    '高校生の理系（数学・理科）に特化した、AI教材と講師サポートによる個別指導塾。学習習慣の立て直しからサポートします。',
  address: {
    '@type': 'PostalAddress',
    addressCountry: 'JP',
    addressRegion: '静岡県',
    addressLocality: '沼津市',
    streetAddress: '沢田町1-3 牧原ビル102',
    postalCode: '410-0052',
  },
  openingHoursSpecification: [
    {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
      opens: '18:50',
      closes: '21:50',
    },
  ],
};
---

{site && <script type="application/ld+json" set:html={JSON.stringify(data)} />}
