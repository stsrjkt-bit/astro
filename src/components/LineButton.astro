---
interface Props {
  href: string;
  label?: string;
  class?: string;
}

const { href, label = 'LINEで塾長に質問', class: className = '' } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`inline-flex items-center gap-2 rounded-full border border-[#00C300] bg-white px-4 py-2 text-sm font-semibold text-[#334455] shadow-sm hover:bg-[#F5FFF5] hover:-translate-y-0.5 transition-colors transition-transform duration-200 ${className}`}
>
  <span class="flex h-6 w-6 items-center justify-center rounded-full bg-[#00C300] text-white text-xs">
    LINE
  </span>
  <span>{label}</span>
</a>
